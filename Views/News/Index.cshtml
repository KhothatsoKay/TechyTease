@model List<NewsArticle>

<h1>News Articles</h1>

@foreach (var article in Model)
{
    <div class="article">

            <h2>@article.Title</h2>
            <p>@article.Description</p>
        
        <div class="authorimage">
            <img src="@article.Image" alt="Article Image" style="max-width: 200px; height: auto;" class="blog-image">
        </div>
        <p><a href="@article.Url">Read More</a></p>
    </div>
}

